{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "extends": [
    "config:recommended"
  ],
  "reviewers": [
    "0num4"
  ],
  "prConcurrentLimit": 2,
  "major": {
    "minimumReleaseAge": "7 days"
  },
  "minor": {
    "minimumReleaseAge": "3 days"
  },
  "patch": {
    "minimumReleaseAge": "1 day",
    "automerge": true
  },
  "separateMinorPatch": true,
  "schedule": [
    "every weekday"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "golang-version"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "enabled": false
    }
  ]
}
